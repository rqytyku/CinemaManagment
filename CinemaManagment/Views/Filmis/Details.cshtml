@model CinemaManagment.Models.MovieDetails
@{
    ViewBag.Title = "Details";
}
<style>
    .pershkrimi {
        text-align:  match-parent;
        margin-left: 5px;
        color: white;
        font-family: "Times New Roman", Times, serif;
        font-style: normal;
        font-size: 20px;
    }

    .foto {
        position: center;
        margin-left: 400px;
        height:auto;
        width:auto;
    }

    .tab {
        padding-left: initial;
        margin-bottom: 15px;
        border-spacing: 15px;
        border-collapse: collapse;
        border-color: #031D3D;
        text-align:center;
    }
    th, td {
        padding: 15px;
        text-align: left;
    }
        .tab tr:nth-child(even) {
            background-color: #eee;
        }

        .tab tr:nth-child(odd) {
            background-color: #fff;
        }

        .tab th {
            background-color: #021429;
            color: white;
        }
    .titulli {
        font-family: 'Times New Roman', Times, serif;
        font-size: 30px;
        color: white;
    }
   

     
</style>
<body style="background-color:#020B15">

    <div>
        <p class="titulli">
            @Html.DisplayFor(model => model.filmi.Titulli)
        </p>
        <hr />
        @Html.ActionLink("Rezervo Bilete", "rezervo", new { id = Model.filmi.Id_Filmi }, new { @class = "btn btn-primary mb1 black bg-gray" })

        <dl>
            <br />
            <div>
                <table class="tab" align="left" border="1">
                    <tr>
                        <th>Salla</th>
                        <th>Orari</th>


                    </tr>
                    @foreach (var model in Model.filmi.Filma_Salla)
                    {
                        <tr>


                            <td>
                                @Html.DisplayFor(modelItem => model.Id_Salla)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => model.Orari)
                            </td>
                        </tr>
                    }
                </table>
                <dd class="foto">
                    <img src=@Url.Content(Model.filmi.Foto) width="400" height="300" />
                </dd>
                <dd class="pershkrimi">
                    @Html.DisplayFor(model => model.filmi.Pershkrimi)
                </dd>
        </dl>
    </div>
    <p>
        @Html.ActionLink("Kthehu Te Lista e Filmave", "ShfaqFilma", new { id = Model.filmi.Kategoria })
    </p>
</body>