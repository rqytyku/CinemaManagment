<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="navbar-header" style="color:#ffffff">

                    @Html.ActionLink("Kinemaja Ime", "Index", "Kategoris", new { area = "" }, new { @class = "navbar-brand" })
                </div>
            </div>
            @if (Session["perdorues"] == null)
            {
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@Url.Action("Registration","Perdorues")"><span class="glyphicon glyphicon-user"></span> Rregjistrohu</a></li>
                    <li><a href="@Url.Action("LogIn","Perdorues")"><span class="glyphicon glyphicon-log-in"></span> Hyr</a></li>
                </ul>
            }
            else if (Session["perdorues"] != null)
            {
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@Url.Action("Logout","Perdorues")"><span class="glyphicon glyphicon-log-in"></span> Dilni</a></li>
                </ul>
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("Rezervimet","Perdorues", new { id = Session["perdorues"]})"><span></span>Rezervimet e tua</a></li>
                </ul>
            }
        </div>
    </div>
    </head>
    <body>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Romela Qytyku </p>
            </footer>
        </div>
        @RenderSection("scripts", false)
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")

    </body>
</html>
